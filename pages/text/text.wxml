<!--pages/text/text.wxml-->
<text>pages/text/text.wxml\n</text>
<text>你好小程序\n</text>

<!-- selectable：true -->
<!-- 默认情况下text中文本是不可以被选中的 -->

<text selectable> 只写selectable也可以实现\n</text>
<text selectable="{{flage}}"> hello world\n</text>

<!-- space:决定文本空格大小 -->
<!-- nbsp:默认大小 -->
<!-- ensp:半个中文字符大小 -->
<!-- emsp:一个中文字符大小 -->
<text space="nbsp">hello world\n</text>
<text space="ensp">hello world\n</text>
<text space="emsp">hello world\n</text>

<!-- decode属性：是否解码文本 -->
<text decode='true'>5 &gt; 3 \n</text>